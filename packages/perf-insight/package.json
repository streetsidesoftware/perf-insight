{
  "name": "perf-insight",
  "version": "2.0.0",
  "description": "Performance benchmarking tool for NodeJS.",
  "type": "module",
  "engines": {
    "node": ">=20.18"
  },
  "bin": {
    "insight": "./bin.mjs",
    "perf-insight": "./bin.mjs"
  },
  "scripts": {
    "build": "tsc -p .",
    "watch": "tsc -p . --watch",
    "coverage": "vitest run --coverage",
    "app": "node ./bin.mjs",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepare": "pnpm build"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs"
    }
  },
  "keywords": [
    "performance",
    "benchmark",
    "cli",
    "node",
    "tool"
  ],
  "author": {
    "name": "Street Side Software",
    "url": "https://github.com/streetsidesoftware"
  },
  "bugs": {
    "url": "https://github.com/streetsidesoftware/perf-insight/issues"
  },
  "homepage": "https://github.com/streetsidesoftware/perf-insight#readme",
  "license": "MIT",
  "devDependencies": {
    "lorem-ipsum": "^2.0.8"
  },
  "dependencies": {
    "as-table": "^1.0.55",
    "chalk": "^5.6.2",
    "commander": "^14.0.1",
    "globby": "^14.1.0",
    "ora": "^9.0.0"
  },
  "files": [
    "bin.mjs",
    "dist/**/*.mjs",
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "dist/**/*.d.mts",
    "!**/*.test.*",
    "!**/*.map"
  ]
}
